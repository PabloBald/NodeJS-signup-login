<div class="row">
<div class="col-6 mx-auto"> 
<form action="/update/{{article.id}}" method="POST">
<div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" type="text" value="{{article.title}}" name="title" id="title" autofocus>
</div>
<div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" name="body" id="body" cols="30" rows="10">{{article.body}}</textarea>
</div>
<div class="form-group">
    <label for="publish_date">Publish date</label>
    <input class="form-control" type="date"  value={{article.publish_date}} name="publish_date" id="publish_date">
</div>
<div class="form-group">
    <input class="btn btn-primary" type="submit">
</div>
</form>
</div>
</div>   